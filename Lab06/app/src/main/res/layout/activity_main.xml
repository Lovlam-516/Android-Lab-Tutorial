<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#ffffff">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#007f00"
            android:gravity="center"
            android:padding="10dp"
            android:text="Thông tin cá nhân"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Họ tên -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên:"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/edtHoTen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="Nhập họ tên"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- CMND -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CMND:"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/edtCMND"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="Nhập CMND"
                android:inputType="number"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Bằng cấp -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#03A9F4"
            android:padding="5dp"
            android:text="Bằng cấp"
            android:textColor="#FFEB3B"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck" />

        <RadioGroup
            android:id="@+id/rgBangCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <RadioButton
                android:id="@+id/rdoTrungCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung cấp" />

            <RadioButton
                android:id="@+id/rdoCaoDang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cao đẳng" />

            <RadioButton
                android:id="@+id/rdoDaiHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đại học" />
        </RadioGroup>

        <!-- Sở thích -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#2196F3"
            android:padding="5dp"
            android:text="Sở thích"
            android:textColor="#FFEB3B"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkDocBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đọc báo" />

            <CheckBox
                android:id="@+id/chkDocSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đọc sách" />

            <CheckBox
                android:id="@+id/chkDocCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đọc coding" />
        </LinearLayout>

        <!-- Thông tin bổ sung -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#2196F3"
            android:padding="5dp"
            android:text="Thông tin bổ sung"
            android:textColor="#FFEB3B"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/edtThongTinBS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập thông tin bổ sung"
            android:minLines="2"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <!-- Gửi thông tin -->
        <Button
            android:id="@+id/btnGui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#cccccc"
            android:text="Gửi thông tin"
            android:textColor="#455A64" />
    </LinearLayout>
</ScrollView>
